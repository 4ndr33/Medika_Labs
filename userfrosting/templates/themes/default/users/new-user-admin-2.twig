{% extends "layouts/layout-dashboard.twig" %}
{% set page_group = "dashboard" %}

{# Set page properties (page.*) here. #}
{% block page %}
    {# By putting this in a special block, we ensure that it will be set AFTER the default values are set in the parent template, 
    but BEFORE the page itself is rendered. #}    
    {% set page = page | merge({
        "title"       : "Dashboard",
        "description" : "Your user dashboard."
    }) %}
    {{ parent() }}
{% endblock %}

{% block content %}





<div class="row">
	<div class="col-lg-6">
		<div class='panel panel-primary'>
			<div class='panel-heading'>
				<h3 class='panel-title'><i class='fa fa-gear'></i> Set New Provider Admin</h3>
			</div>
			<div class='panel-body'>
				<form class='form-horizontal' role='form' name='settings' action="{{ site.uri.public }}/offer-user-admin" method='post'>
					<!-- Prevent browsers from trying to autofill the password field.  See http://stackoverflow.com/a/23234498/2970321 -->
					<input type="text" style="display:none">
					<input type="password" style="display:none">
					
					<div class="form-group">
						<label class="col-sm-4 control-label">Username </label>
						<div class="col-sm-8">
							<input type='text' class="form-control" name="user_name" id="user_name" style="width: 150px;float:left;" pattern="[a-zA-Z0-9]+">
							&nbsp &nbsp &nbsp<button type=button class='btn btn-success text-center' onclick="VerifyUser();">Verify User</button>
							<br><br>
							<p class="help-block" id="user_name_info"></p>
						</div>
					</div>
					<input type="hidden" name="{{csrf_key}}" value="{{csrf_token}}">
					<div class="form-group text-center">
					<div id="myContainer"></div>
                    </div>
					
					 
					 
					 
            
				</form>
			</div>
		</div>
	</div>
</div>
	
{% endblock %}

{% block page_scripts %}
	<script>
	
	function VerifyUser() 
	{
		
		inputed_user_name = document.getElementById('user_name').value;
		//alert("discount1 : "+price);
		
		
		$("#user_name_info").load("check_user_name.php?e="+inputed_user_name+"&e1=1&e2=3");
		$("#myContainer").load("check_user_name.php?e="+inputed_user_name+"&e1=2&e2=3");
		
		//alert("discount : "+price);
	}
	</script>
{% endblock %}